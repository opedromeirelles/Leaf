@model Leaf.Models.Domain.Usuario
@{
    ViewData["Title"] = "Novo usuario";

    var departamentosServ = ViewBag.Departamentos != null ? ViewBag.Departamentos : new List<Leaf.Models.Domain.Departamento>();

}

@if (TempData["MensagemErro"] != null)
{
    <span id="eventoErro">@TempData["MensagemErro"]</span>
}
else if (TempData["MensagemSucesso"] != null)
{
    <span id="eventoSucesso">@TempData["MensagemSucesso"]</span>
}

<div class="paginaPadrao">
    <br />
    <h2 class="h2tituloCadastro">Cadastro de Usuário</h2>
    <br />
    <form asp-action="Cadastrar" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <br />
                    <label for="Nome">Novo nome</label>
                    <input name="Nome" type="text" class="form-control" id="nomeUsuario" placeholder="ex: João" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <br />
                    <label for="usernameUsuario">Novo username</label>
                    <input name="Login" type="text" class="form-control" id="usernameUsuario" placeholder="novo.usuario" required>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <br />
                    <label for="Senha">Nova senha</label>
                    <input name="Senha" type="password" class="form-control" id="senhaUsuario" placeholder="*****" required>
                </div>
                
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <br />
                    <label for="confSenha">Confirmar senha</label>
                    <input name="confSenha" type="password" class="form-control" id="confirmaSenha" placeholder="*****" required>
                </div>
            </div>
        </div>
        <div class="form-group form-check ">
            <br />
            <input type="checkbox" class="form-check-input" id="mostrarSenha">
            <label class="form-check-label" for="mostrarSenha">Mostrar senha</label>
        </div>

        <br />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="departamentoUsuario">Departamento</label>
                    <select class="form-control" id="departamentoUsuario" name="IdDpto" required>
                        <option value="">Selecione</option>
                        @foreach (var departamento in departamentosServ)
                        {
                            <option value="@departamento.IdDpto">@departamento.Descricao</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <br />
        <div class="btnsControles">
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-danger">DESCARTAR</a>
            <button type="submit" class="btn btn-success">CONFIRMAR</button>
        </div>
        <br />
        <br />
        <br />
    </form>
</div>
