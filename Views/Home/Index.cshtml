@{
    ViewData["Title"] = "Home Page";
    var nomeUsuario = User.Identity?.Name;
    @if (!string.IsNullOrEmpty(nomeUsuario))
    {
        <span id="eventoSucesso">Olá @nomeUsuario</span>
    }
}


<style>

    body{
        background-image: url('../imgs/backgound/degradeFundo.svg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100%;
        position: relative;
        display: flex;
        text-align: center;
        color: white;
    }

</style>

<div class="logoHome">
    <img src="~/imgs/backgound/logo.svg" alt="Logo Leaf" class="logo">
</div>
