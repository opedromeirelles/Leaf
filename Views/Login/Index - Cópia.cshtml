@model LoginModelView
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Área de Acesso ";
}


<div class="login-container">
    <div class="login-image">
        <img src="~/imgs/icons/svg/logo300px.svg" alt="Logo">
    </div>
    <div class="login-form">
        <h2>LOGIN</h2>

        <form asp-controller="Login" asp-action="Entrar" method="post">
            @if (TempData["MensagemErro"] != null)
            {
                <span id="eventoErro">@TempData["MensagemErro"]</span>
            }
            else if (TempData["MensagemSucesso"] != null)
            {
                <span id="eventoSucesso">@TempData["MensagemSucesso"]</span>
            }
            
            <div class="login-group">
                <div class="input-container-group">
                    <div class="input-icon-group">
                        <img src="~/imgs/icons/svg/perfil.svg" alt="Ícone de Perfil" class="input-icon-custom" />
                    </div>
                    <div class="form-group-custom">
                        <input asp-for="Username" type="text" id="login" class="form-input-custom" placeholder="Insira seu Login" required />
                        @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger-login" })
                    </div>
                </div>
            </div>
            <div class="login-group">
                <div class="input-container-group">
                    <div class="input-icon-group">
                        <img src="~/imgs/icons/svg/senha.svg" alt="Ícone de Senha" class="input-icon-custom" />
                    </div>
                    <div class="form-group-custom">
                        <input asp-for="Senha" type="password" id="senha" class="form-input-custom" placeholder="Insira sua Senha" required />
                        @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger-login" })
                    </div>
                </div>
            </div>
            <button type="submit" class="btn-login-custom btn-success-login-custom">ENTRAR</button>
        </form>
    </div>
</div>
    