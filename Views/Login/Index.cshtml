@model LoginModelView
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Área de Acesso.";
}

<div class="login-container">
    <div class="login-image">
        <img src="~/imgs/icons/svg/logo300px.svg" alt="Logo">
    </div>
    <div class="login-form">
        @if (TempData["MensagemErro"] != null)
        {
            <span id="eventoErro">@TempData["MensagemErro"]</span>
        }
        <h2>LOGIN</h2>

        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="form-group">
                <div class="input-container">
                    <img src="~/imgs/icons/svg/perfil.svg" alt="Ícone de Perfil" class="input-icon" />
                    <input asp-for="Username" type="text" id="login" class="form-control" placeholder="Login" />
                    @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-container">
                    <img src="~/imgs/icons/svg/senha.svg" alt="Ícone de Senha" class="input-icon" />
                    <input asp-for="Senha" type="password" id="senha" class="form-control" placeholder="Senha" />
                    @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="submit" class="btn btn-success">ENTRAR</button>
        </form>
    </div>
</div>
