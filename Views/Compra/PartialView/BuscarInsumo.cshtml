<br />

<!-- Botão do modal -->
<button type="button" class="btn btn-secondary" data-toggle="modal" id="btnModalInsumo" data-target="#staticBackdrop">
    Adicionar Insumos +
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Adicionar Insumos <span id="pessoaVinculada"></span> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <!-- Campo de Busca -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="inputBuscaInsumo" placeholder="Digite a descrição do insumo">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="btnBuscaInsumo">Buscar</button>
                        <button class="btn btn-outline-danger" type="button" id="btnLimparBusca">Limpar</button>
                    </div>
                </div>

                <!-- Corpo da Tabela -->
                <div>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Descrição</th>
                                <th scope="col" class="text-center">Valor Unitário</th>
                                <th scope="col" class="text-center">Quantidade</th>
                                <th scope="col" class="text-center">Unidade Medida</th>
                                <th scope="col" class="text-center">Estoque Atual</th>
                                <th scope="col" class="text-center">Adicionar</th>
                            </tr>
                        </thead>
                        <tbody id="listaInsumo">
                            <!-- Os insumos serão listados aqui dinamicamente -->
                        </tbody>
                    </table>
                    <span id="mensagemControle"></span>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnDispensar" data-dismiss="modal">Retornar</button>
            </div>
        </div>
    </div>
</div>