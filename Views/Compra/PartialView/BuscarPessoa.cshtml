<!-- Botão do modal para buscar pessoa -->
<button type="button" class="btn btn-primary" data-toggle="modal" id="btnAdicionarPessoa" data-target="#pessoaModal">
    Vincular Pessoa +
</button>

<!-- Modal -->
<div class="modal fade" id="pessoaModal" tabindex="-1" aria-labelledby="pessoaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pessoaModalLabel">Vincular Pessoa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Campo de Busca -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="inputBuscarPessoa" placeholder="Digite o nome">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="btnBuscaPessoa">Buscar</button>
                        <button class="btn btn-outline-danger" type="button" id="btnLimparBuscaPessoa">Limpar</button>
                    </div>
                </div>
                <!-- Corpo da Tabela -->
                <div>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">CNPJ</th>
                                <th scope="col" class="text-center">Telefone</th>
                                <th scope="col" class="text-center">Selecionar</th>
                            </tr>
                        </thead>
                        <tbody id="listaPessoa">
                            <!--Lista dinamicamente-->
                        </tbody>
                    </table>
                    <span id="mensagemControlePessoa"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Retornar</button>
                <button type="button" class="btn btn-primary" id="btnVincularPessoa" data-dismiss="modal">Vincular</button>
            </div>
        </div>
    </div>
</div>